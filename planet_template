    <script language="javascript">
        //In Mozilla, WebKit(?) Coming in IE9, in HTML5
        if (document.addEventListener) {
            document.addEventListener("DOMContentLoaded", applyConfig, false);
        }

        function createCookie(cname, cvalue, exdays) {
            var d = new Date();
            d.setTime(d.getTime() + (exdays*24*60*60*1000));
            var expires = "expires="+d.toUTCString();
            document.cookie = cname + "=" + cvalue + "; " + expires;
        }
        /*
        function createCookie(name, value, days) {
            if (days) {
                var date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                var expires = "; expires=" + date.toGMTString();
            } else var expires = "";
            document.cookie = name + "=" + value + expires + "; path=/";
        }

        function readCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }
        */

        function readCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for(var i=0; i<ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0)==' ') c = c.substring(1);
                if (c.indexOf(name) == 0) return c.substring(name.length,c.length);
            }
            return "";
        }

        function eraseCookie(name) {
            createCookie(name, "", -1);
        }

        function toggle() {
            var ele = document.getElementById("feeddiv");
            if (ele.style.display == "block") {
                ele.style.display = "none";
            } else {
                ele.style.display = "block";
            }
        }

        function toggleaddme() {
            var ele = document.getElementById("addme");
            if (ele.style.display == "block") {
                ele.style.display = "none";
            } else {
                ele.style.display = "block";
            }
        }

        function toggleconfig() {
            var ele = document.getElementById("config");
            if (ele.style.display == "block") {
                ele.style.display = "none";
            } else {
                ele.style.display = "block";
            }
        }

        function toggleenglish() {
            var ele = document.getElementsByClassName("english");
            for (var i = 0, j = ele.length; i < j; i++)
                if (ele[i].style.display == "block") {
                    ele[i].style.display = "none";
                    document.getElementById("toggleenglish").checked = false;
                    createCookie("english", "none", 360)
                } else {
                    ele[i].style.display = "block";
                    document.getElementById("toggleenglish").checked = true;
                    createCookie("english", "block", 360)
                }
        }

        function togglerussian() {
            var ele = document.getElementsByClassName("russian");
            for (var i = 0, j = ele.length; i < j; i++)
                if (ele[i].style.display == "block") {
                    ele[i].style.display = "none";
                    document.getElementById("togglerussian").checked = false;
                    createCookie("italian", "none", 360)
                } else {
                    ele[i].style.display = "block";
                    document.getElementById("togglerussian").checked = true;
                    createCookie("italian", "block", 360)
                }
        }

        function togglenews() {
            var ele = document.getElementsByClassName("news");
            for (var i = 0, j = ele.length; i < j; i++)
                if (ele[i].style.display == "block") {
                    ele[i].style.display = "none";
                    document.getElementById("togglenews").checked = false;
                    createCookie("news", "none", 360)
                } else {
                    ele[i].style.display = "block";
                    document.getElementById("togglenews").checked = true;
                    createCookie("news", "block", 360)
                }
        }

        function toggleuser() {
            var ele = document.getElementsByClassName("user");
            for (var i = 0, j = ele.length; i < j; i++)
                if (ele[i].style.display == "block") {
                    ele[i].style.display = "none";
                    document.getElementById("toggleuser").checked = false;
                    createCookie("user", "none", 360)
                } else {
                    ele[i].style.display = "block";
                    document.getElementById("toggleuser").checked = true;
                    createCookie("user", "block", 360)
                }
        }

        /*onLoad show microblog block if it was shown before*/
        function applyConfig() {
            if (document.cookie === "") {
                createCookie("dot", "block", 360);
                createCookie("english", "none", 360);
                createCookie("russian", "none", 360);
                createCookie("news", "block", 360);
                createCookie("user", "block", 360);
            };

            var ele = document.getElementsByClassName("english");
            var english = readCookie("english");
            if (english == "block") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "block");
                document.getElementById("toggleenglish").checked = true;
            };
            if (english == "none") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "none");
                document.getElementById("toggleenglish").checked = false;
            };
            var ele = document.getElementsByClassName("russian");
            var russian = readCookie("russian");
            if (russian == "block") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "block");
                document.getElementById("togglerussian").checked = true;
            };
            if (russian == "none") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "none");
                document.getElementById("togglerussian").checked = false;
            };
            var ele = document.getElementsByClassName("news");
            var news = readCookie("news");
            if (news == "block") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "block");
                document.getElementById("togglenews").checked = true;
            };
            if (news == "none") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "none");
                document.getElementById("togglenews").checked = false;
            };
            var ele = document.getElementsByClassName("user");
            var user = readCookie("user");
            if (user == "block") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "block");
                document.getElementById("toggleuser").checked = true;
            };
            if (user == "none") {
                for (var i = 0, j = ele.length; i < j; i++)
                    (ele[i].style.display = "none");
                document.getElementById("toggleuser").checked = false;
            };
        }
    </script>
</head>

